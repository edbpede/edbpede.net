---
import Layout from '../layouts/Layout.astro';
import CircularNav from '../components/CircularNav.astro';
---

<Layout title="EDB Pede">
	<main class="min-h-screen bg-gradient-to-br from-purple-600 via-blue-600 to-indigo-600 relative overflow-hidden">
		<div class="absolute inset-0 bg-[radial-gradient(circle_at_center,rgba(255,255,255,0.1)_0%,transparent_70%)] animate-pulse"></div>
		<div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top,rgba(255,255,255,0.05)_0%,transparent_50%)]"></div>
		<CircularNav />
	</main>
</Layout>

<style>
	main {
		animation: gradientAnimation 15s ease infinite;
		background-size: 400% 400%;
	}
	@keyframes gradientAnimation {
		0% { background-position: 0% 50%; }
		50% { background-position: 100% 50%; }
		100% { background-position: 0% 50%; }
	}
</style>

